{
  "parserOptions": {
    "ecmaVersion": 2018
  },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-undef": [0],
      "no-var": [ "error" ],
        "indent": [
            0,
            2
        ],
        "no-unused-vars": [0],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": [0],
        "quotes": [0],
        "semi": [
            "error",
            "always"
        ]
    }
}
